.publish
    font-size 0
    &__item
        {ibt}
        text-align center
        color $grey-dark-color
        text-decoration none
        text-transform uppercase
        font-weight 700
        background-color white
        padding 74px 10px 40px
        transition all .15s linear

        &:focus
            outline 1px dotted $purple-light-color

        &:hover
            background-color $purple-light-color
            color white

            &.publish__item_event
                p
                    &:before
                        content inline("events-icon-big-w.png")

            &.publish__item_news
                p
                    &:before
                        content inline("news-icon-big-w.png")

        &_event
            width 47.07%
            margin-right 5.86%

            p
                &:before
                    content inline("events-icon-big.png")
                    top -42px

        &_news
            width 47.07%

            p
                &:before
                    content inline("news-icon-big.png")
                    top -38px

        p
            position relative
            margin-top 0
            hyphens()
            font-size-func(18)

            &:first-child
                &:before
                    position absolute
                    left 50%
                    transform translateX(-50%)

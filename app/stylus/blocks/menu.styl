menu__icon()
    cursor pointer
    border-radius 1px
    height 3px
    width 25px
    background-color white
    position absolute
    display block
    content ''
    transition all .2s ease .2s, transform .2s ease 0s

ul()
    list-style none
    margin 0
    padding 0
    position relative
    top 100%
    left 0
    width 100%
    background-color $purple-light-color
    overflow hidden
    z-index 9999
    height auto
    display none
    transition all 0s ease-out 0s

    @media (min-width 480px)
        display block
        overflow visible

    @media (min-width 768px)
        text-align right

li()
    display block
    margin 0
    position relative
    border-bottom 1px solid rgba(94, 42, 114, 0.5)
    hyphens()

    @media (min-width 480px)
        border none

    @media (min-width 768px)
        margin-right 23px

    &:last-child
        @media (min-width 480px)
            border-bottom none
        @media (min-width 480px)
            margin-right 0

a()
    display inline-block
    width 100%
    font-size-func(16)
    font-weight 700
    letter-spacing 0.05em
    text-transform uppercase
    color white
    text-decoration none
    padding4-func(17, 30, 17, 17)

    @media (min-width 480px)
        padding1-func(9)
        color white

.menu
    position relative

    &__btn
        width 100%
        background-color $purple-dark-color
        color white
        width 100%
        text-align left
        position relative
        cursor pointer
        user-select none
        padding-left 45px
        border none
        ellipsis()

        @media (min-width 480px)
            display none

        &.open
            .menu__icon
                background-color transparent

                &:before
                    transform rotate(45deg)
                    top 0
                    transition all .2s ease 0s, transform .2s ease .2s

                &:after
                    transform rotate(-45deg)
                    bottom 0
                    transition all .2s ease 0s, transform .2s ease .2s

    &__icon
        position absolute
        top 50%
        left 10px
        transform translatey(-50%)
        menu__icon()

        &:before, &:after
            menu__icon()

        &:before
            top 8px

        &:after
            bottom 8px

    &__title
        line-height 40px
        line-height 4rem
        text-transform uppercase
        font-size-func(20)
        font-weight 900

    &__ul
        ul()

        @media (min-width 480px)
            padding 20px 0

        ul
            ul()

        li
            li()

        a
            a()

        span
            @extend .menu__ul a
            cursor pointer

        > li
            > a
                padding-left 45px

                &:before
                    content ""
                    position absolute
                    left 22px
                    left 2.2rem
                    top 50%
                    transform translate(-50%, -50%)

            > span
                padding-left 45px

                &:before
                    content ""
                    position absolute
                    left 22px
                    left 2.2rem
                    top 50%
                    transform translate(-50%, -50%)

            > ul
                background-color white

                @media (min-width 480px)
                    display none
                    width 100%
                    background-color white

                > li
                    border-bottom none
                    border-top 1px solid #ccc

                    &:first-child
                        @media (max-width 480px)
                            border-top-color rgba(94, 42, 114, 0.8)

                    @media (min-width 480px)
                        display block
                        margin-right 0
                        border-top 1px solid #ccc

                    @media (min-width 768px)
                        margin-right 0

                    > a
                        padding 10px 30px 10px 34px
                        color $purple-light-color

                        @media (min-width 480px)
                            padding 10px 20px 10px 15px

                    > span
                        @extend .menu__ul > li > ul > li > a
                        cursor pointer

                        &.open
                            background-color rgba(167, 115, 180, 0.2)

                    > ul
                        top 0
                        padding-left 0
                        background-color white

                        @media (min-width 480px)
                            display none
                            text-align left

                        @media (min-width 768px)
                            text-align left

                        > li
                            border-bottom 0
                            border-top 1px solid #ccc

                            @media (min-width 480px)
                                display block
                                margin-right 0
                                border-top 1px solid #ccc

                            @media (min-width 768px)
                                margin-right 0

                            > a
                                color $purple-light-color
                                padding 10px 5px 10px 51px

                                @media (min-width 480px)
                                    padding 10px 5px 10px 23px
                                    color $purple-light-color

        span
            position relative

            &:after
                content ""
                position absolute
                right 5%
                top 50%
                transform translateY(-70%) rotate(45deg)
                width 5px
                height 5px
                border 4px solid $purple-dark-color
                border-left-color transparent
                border-top-color transparent
                transition all .5s ease

            &.open
                &:after
                    transform translateY(-30%) rotate(225deg)

    &__dashboard
        &:before
            width 19px
            width 1.9rem
            height 17px
            height 1.7rem
            background inline('dashboard-icon.png') center / cover no-repeat

    &__forum
        &:before
            width 19px
            width 1.9rem
            height 16px
            height 1.6rem
            background inline('forum-icon.png') center / cover no-repeat

    &__around
        &:before
            width 28px
            width 2.8rem
            height 31px
            height 3.1rem
            background inline('getting-around-icon.png') center / cover no-repeat

    &__news
        &:before
            width 17px
            width 1.7rem
            height 16px
            height 1.6rem
            background inline('news-icon.png') center / cover no-repeat

    &__events
        &:before
            width 17px
            width 1.7rem
            height 17px
            height 1.7rem
            background inline('events-icon.png') center / cover no-repeat

    &__services
        &:before
            width 15px
            width 1.5rem
            height 16px
            height 1.6rem
            background inline('services-icon.png') center / cover no-repeat

    &__search
        &:before
            width 14px
            width 1.4rem
            height 17px
            height 1.7rem
            background inline('search-icon.png') center / cover no-repeat

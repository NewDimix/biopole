.more
    font-size 0
    &__item
        display block
        text-align center
        color $grey-dark-color
        text-decoration none
        text-transform uppercase
        font-weight 700
        transition all .3s ease
        min-height 134px

        @media (min-width 400px)
            {ibt}
            width 47.07%

        &:hover
            box-shadow 8px 8px 0 0 rgba(0, 0, 0, 0.2)
            transform scale(1.025)

        &_book
            background-image url(../img/forum.png)
            background-position center
            background-size cover
            padding 37px 10px 27px
            line-height 25px
            line-height 2.5rem
            margin-bottom 28px

            @media (min-width 400px)
                margin-right 5.86%
                margin-bottom 0

        &_around
            background-image url(../img/street.png)
            background-position center
            background-size cover
            padding 79px 0px 22px

            p
                background-color rgba(255, 255, 255, 0.85)
                color $green-color
                padding 10px

        p
            hyphens()
            font-size-func(18)
            margin-top 0
            margin-bottom 0

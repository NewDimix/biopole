.more
    font-size 0
    &__item
        display inline-block
        vertical-align top
        text-align center
        color $grey-dark-color
        text-decoration none
        text-transform uppercase
        font-weight 700
        background-color white
        padding 80px 10px 40px
        transition all .15s linear

        &:hover
            background-color $purple-light-color
            color white

        &_book
            width 47.07%
            margin-right 5.86%

        &_around
            width 47.07%

        p
            position relative
            hyphens()
            font-size-func(18)

.main
    padding-bottom 25px
    font-size 0

    @media (min-width 768px)
        padding-top 25px

    &__aside
        margin-bottom 28px

        @media (min-width 768px)
            position sticky
            top 10px
            margin-bottom 0
            float left

    &__content
        @media (min-width 768px)
            display block
            margin-left 205px
            margin-left 20.5rem

    &__menu
        margin-left -10px
        margin-right -10px

        @media (min-width 768px)
            margin-left 0
            margin-right 0

    &__column
        margin-bottom 28px

        &_1
            @media (min-width 1100px)
                display inline-block
                width 49.44%
                margin-right 3%
                margin-bottom 0

        &_2
            @media (min-width 480px)
                {ibt}
                width 47.07%
                margin-right 5.86%

            @media (min-width 1100px)
                width 22.28%
                margin-bottom 0
                margin-right 3%

        &_3
            @media (min-width 480px)
                {ibt}
                width 47.07%

            @media (min-width 1100px)
                width 22.28%
                margin-bottom 0

    &__item
        &:not(:last-child)
            margin-bottom 28px

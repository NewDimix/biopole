.header
    background-color #fff
    padding2-func(10, 0)

    @media (min-width 520px)
        padding3-func(19, 0, 5)

    &__authorization
        text-align center
        margin-bottom 20px

        @media (min-width 768px)
            float right
            text-align right
            padding-top 27px
            margin-bottom 0

    &__logo
        text-align center
        margin-left auto
        margin-right auto

        @media (min-width 768px)
            float left

        a
            &:focus
                outline-color #ffb92a

        img
            vertical-align top

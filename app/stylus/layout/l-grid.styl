html
    box-sizing border-box
    font-size 62.5%

*, *:before, *:after
    box-sizing inherit

body
    min-width 320px
    font-family MuseoSans, arial, verdana, sans-serif
    background white url(../img/background.png) left top
    font-weight 400
    font-style normal
    color $grey-dark-color
    display flex
    flex-direction column
    min-height 100vh

.container
    position relative
    max-width 1100px
    padding 0 10px
    margin-left auto
    margin-right auto

    @media (min-width 1120px)
        padding 0

ul, li, fieldset, h1, h2, h3, h4, h5, h6, p, button
    margin 0
    padding 0

p
    &:not(:last-child)
        margin-bottom 5px

button
    &:hover
        cursor pointer
